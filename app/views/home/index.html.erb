<div class="container">
  <% @videos.each do |f| %>

    <div class="img-thumbnail col-sm-6 col-md-3 videocontainer">
      <center>
        <%= image_tag f.thumbnail, class:"img-responsive thumb", "data-toggle"=>"modal", "data-target"=>"#modal-#{f.id}" %>
      <hr>
        <b> <div class="uptext">  <%= f.title%> </div> </b>
      </center>
    </div>

  <center>
    <div class="modal fade jsmodal" id="modal-<%=f.id%>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="img-lrg modal-content">
          <%= video_tag f.videourl, controls: true, autobuffer: true, poster: "#{f.thumbnail}",class: "videosize" %>
            <hr />
            <h1> <%= f.title %> </h1>
            <div style="text-align: left; padding: 0em 1em 1em 1em;">  <%= f.description %> </div>
        </div>
      </div>
    </div>
  </center>

  <% end %>

</div><!-- Container Div -->
